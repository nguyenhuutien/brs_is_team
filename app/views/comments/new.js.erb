<% if @comment.parent_id.present? %>
  $('#nht-comment-reply-<%= @parent.id %>').show()
  $('#nht-comment-reply-<%= @parent.id %>').html('<%= j render "form", review: @review, comment: @comment %>')
<% else %>
  $('#nht-comment-form-<%= @review.id %>').show()
  $('#nht-comment-form-<%= @review.id %>').html('<%= j render "form", review: @review, comment: @comment %>')
<% end %>
