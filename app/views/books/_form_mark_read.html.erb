<% if mark.read? %>
  <%= link_to "<i class='fa fa-file-text nht-bookmark-icon'></i>".html_safe,
    mark_path(mark: {mark_read: Settings.book.list_status[0]}), method: :patch, remote: true %>
<% else %>
  <%= link_to "<i class='fa fa-file-text-o nht-bookmark-icon'></i>".html_safe,
    mark_path(mark: {mark_read: Settings.book.list_status[1]}), method: :patch, remote: true %>
<% end %>
