<div class="row nht-author-index">
  <div class="col-xs-10 col-sm-8 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1
    col-md-offset-1 col-lg-offset-1">
    <h2><%= t "author.all_author" %></h2>
    <div class="nht-search-form">
      <%= search_form_for @q, remote: true do |f| %>
        <div class="nht-checkbox-filter">
          <span>
            <%= t "author.filter" %>
          </span>
          <label class="checkbox-inline">
            <%= check_box_tag :type, "favorite" %>
            <b><%= t "author.favorite" %></b>
          </label>
        </div>
        <div class="col-sm-8 col-xs-8 col-md-6 col-md-ofset-2 col-lg-6 col-lg-offset-2">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-info nht-icon" aria-hidden="true"></i>
            </span>
            <%= f.text_field :name_cont, placeholder: t("author.name"),
              class: "form-control" %>
          </div>
        </div>
        <div class="nht-btn-search col-md-4 col-lg-4">
          <%= f.submit t(:search), class: "btn btn-primary" %>
        </div>
        <div class="clearfix"></div>
      <% end %>
      <div class="clearfix"></div>
    </div>
    <div class="col-sm-10 col-xs-12 col-md-12 col-lg-12 nht-list_author" id="nht-authors">
      <%= render "author_index" %>
    </div>
  </div>
</div>
<div id="nht-author-show" class="modal fade"></div>
